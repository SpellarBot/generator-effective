{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true,
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
